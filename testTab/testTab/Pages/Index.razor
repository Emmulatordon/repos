@page "/"

<PageTitle>Index</PageTitle>

<style>
    .tab {
        overflow: hidden;
        border: 1px solid #ccc;
        background-color: #f1f1f1;
    }

        .tab button {
            background-color: inherit;
            float: left;
            border: none;
            outline: none;
            cursor: pointer;
            padding: 14px 16px;
            transition: 0.3s;
            font-size: 17px;
        }

            .tab button:hover {
                background-color: #ddd;
            }

    .tabcontent {
        padding: 6px 12px;
        border: 1px solid black;
        border-top: none;
    }
</style>
<div class="tab">
    <button style="@(tab1?"background-Color:#808080;color:white;":"")" @onclick="(x=>DisplayTab(1))">Basic infor</button>
    <button @onclick="(x=>DisplayTab(2))">Manage</button>
    <button @onclick="(x=>DisplayTab(3))">Consume</button>

</div>
@if (tab1)
{
    <div class="tabcontent">
        <h1>This is tab1</h1>
    </div>
}
@if (tab2)
{
    <div class="tabcontent">
        <h1>This is tab2</h1>
    </div>
}
@if (tab3)
{
    <div class="tabcontent">
        <h1>This is tab3</h1>
    </div>
}
<SurveyPrompt Title="How is Blazor working for you?" />

@code {
    private bool tab1 = true;
    private bool tab2 = true;
    private bool tab3 = true;
    public void DisplayTab(int TabNumber)
    {
        switch (TabNumber)
        {
            case 1:
                this.tab1 = true;
                this.tab2 = false;
                this.tab3 = false;
                break;
            case 2:
                this.tab1 = false;
                this.tab2 = true;
                this.tab3 = false;
                break;
            case 3:
                this.tab1 = false;
                this.tab2 = false;
                this.tab3 = true;
                break;

        }

    }
}


